{
  "name": "game",
  "version": "0.1.0",
  "description": "The best game in the world",
  "repository": {
    "type": "git",
    "url": "https://github.com/mitestojanov1990/bestgame.git"
  },
  "author": "Mite Stojanov",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "exec": "ts-node src/main.ts dev",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/main.js",
    "watch-node": "nodemon dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve-debug": "nodemon --inspect dist/main.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "client": "cd src/public/react/demo-react && yarn start",
    "client-build": "cd client && yarn build",
    "dev": "concurrently --kill-others-on-fail \"yarn start\" \"yarn client\""
  },
  "dependencies": {
    "@nestjs/common": "^6.2.0",
    "@nestjs/core": "^6.2.0",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-fastify": "^6.2.0",
    "@nestjs/swagger": "^3.0.2",
    "@types/compression": "^0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.1",
    "@types/method-override": "^0.0.31",
    "@types/mongoose": "^5.5.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.0",
    "fastify-swagger": "^2.4.0",
    "method-override": "^3.0.0",
    "mongodb": "^3.2.5",
    "mongoose": "^5.5.9",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "tslib": "^1.9.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "jest": "24.7.1",
    "nodemon": "^1.18.10",
    "ts-node": "^5.0.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
